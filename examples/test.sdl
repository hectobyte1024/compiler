// Simple SDL test with basic functionality
shader testVertex : vertex {
    in vec3 position;
    out vec4 gl_Position;
    
    uniform mat4 mvpMatrix;
    
    void main() {
        gl_Position = mvpMatrix * vec4(position, 1.0);
    }
}

shader testFragment : fragment {
    out vec4 fragColor;
    
    void main() {
        fragColor = vec4(1.0, 0.0, 0.0, 1.0);
    }
}
